
public class SlowPiece extends Piece {
	
	public void move(int direction) {
		if(direction < 0){
			if(this.getPosition()[0] - 1 >= 0){
				this.getPosition()[0] = this.getPosition()[0] - 1;
			}
		}else{
			if(this.getPosition()[0] + 1 > 7)
			this.getPosition()[0] = this.getPosition()[0] + 1;
		}
	}
}
