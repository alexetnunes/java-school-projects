import java.util.Arrays;


public class FastPiece extends Piece {

	public FastPiece() {
		
	}

	public FastPiece(String name, String colour, int[] position) {
		super(name, colour, position);
	}
	
	public void move(String direction, int spaces) {
		if(direction.toLowerCase().equals("left")){
			if(this.getPosition()[0] - spaces >= 0){
				this.getPosition()[0] = this.getPosition()[0] - spaces;
			}
		}else if(direction.toLowerCase().equals("right")){
			if(this.getPosition()[0] + spaces >= 0){
				this.getPosition()[0] = this.getPosition()[0] + spaces;
			}
		}else{
			System.out.println("Invalid direction.");
		}
	}

	@Override
	public String toString() {
		return "FastPiece [Name=" + getName() + ", Colour="
				+ getColour() + ", Position="
				+ Arrays.toString(getPosition()) +"]";
	}	
}
